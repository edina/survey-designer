<fieldset class="fieldcontain fieldcontain-range" id="{{fieldId}}">
  <legend>{{t "range.field-title"}}</legend>
  <label for="label">{{t "range.label-title"}}</label>
  <input type="text" name="label" value="{{label}}">
  <input type="checkbox" name="required" {{check required "checked"}}>{{t "range.required"}} <br>
  <input type="checkbox" name="persistent" {{check persistent "checked"}}>{{t "range.persistent"}}
  <label for="step">{{t "range.step-label"}}</label>
  <input type="number" name="step" value="{{step}}">
  <label for="min">{{t "range.min-label"}}</label>
  <input type="number" name="min" value="{{min}}">
  <label for="max">{{t "range.max-label"}}</label>
  <input type="number" name="max" value="{{max}}">
</fieldset>