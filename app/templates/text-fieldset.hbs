<fieldset class="fieldcontain fieldcontain-text" id="{{id}}" data-type="{{type}}">
  <legend>{{t "text.field-title"}}</legend>
  <label for="label">{{t "text.label-title"}}</label>
  <input type="text" name="label" value="{{label}}">
  <label for="required">{{t "text.required"}}</label>
  <input type="checkbox" name="required" {{check required "checked"}}>
  <label for="prefix">{{t "text.prefix-title"}}</label>
  <input type="text" name="prefix" placeholder="{{t "text.prefix"}}" value="{{properties.prefix}}">
  <label for="persistent">{{t "text.persistent"}}</label>
  <input type="checkbox" name="persistent" {{check persistent "checked"}}>{{t "text.persistent"}}
  <label for="placeholder">{{t "text.default-text-title"}}</label>
  <input type="text" name="placeholder" placeholder="{{t "text.default-text"}}" value="{{properties.placeholder}}">
  <label for="max-chars">{{t "text.max-chars-title"}}</label>
  <input type="number" name="max-chars" value="{{properties.max-chars}}">
</fieldset>
