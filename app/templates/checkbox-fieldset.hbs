<fieldset class="fieldcontain fieldcontain-checkbox" id="{{id}}"  data-type="{{type}}">
  <legend>{{t "checkbox.field-title"}}</legend>
  <label for="label">{{t "checkbox.label-title"}}</label>
  <input type="text" name="label" value='{{label}}'><br>
  <label for="required">{{t "checkbox.required"}}</label>
  <input type="checkbox" name="required" {{check required "checked"}}><br>
  <label for="persistent">{{t "checkbox.persistent"}}</label>
  <input type="checkbox" name="persistent" {{check persistent "checked"}}><br>
  <label for="other">{{t "checkbox.allow-other"}}</label>
  <input type="checkbox" name="other" {{check properties.other "checked"}}>
  <div class="checkboxes">
  {{#each properties.options}}
    <div class="form-inline">
      {{#ifObject this}}
        <img src="{{this.[1]}}" style="width: 50px;">
        <input type="text" value="{{this.[0]}}" name="{{../id}}" id="{{../id}}-{{increase @index}}" class="checkbox">
      {{else}}
        <input type="text" value="{{this}}" name="{{../id}}" id="{{../id}}-{{increase @index}}" class="checkbox">
        <button type="file" class="btn btn-default btn-sm upload-image" aria-label="{{t "checkbox.upload"}}">
          <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span>
        </button>
      {{/ifObject}}
      <button type="button" class="btn btn-default btn-sm remove-checkbox" aria-label="{{t "checkbox.remove"}}">
        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
      </button>
      <input type="file" class="image-upload" id="upload-{{../id}}" style="display: none;">
    </div>
  {{/each}}
  </div>
  <button type="button" class="btn btn-default btn-sm add-checkbox" aria-label="{{t "checkbox.add-checkbox"}}">
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
  </button>
  <button type="button" class="btn btn-default btn-sm relate" aria-label="{{t "checkbox.relate"}}">
    {{t "checkbox.relate"}}
  </button>
</fieldset>
