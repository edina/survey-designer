<fieldset class="fieldcontain fieldcontain-checkbox" id="{{fieldId}}">
  <legend>{{t "checkbox.field-title"}}</legend>
  <label for="label">{{t "checkbox.label-title"}}</label>
  <input type="text" name="label" value='{{label}}'>
  <input type="checkbox" name="required" {{check required}}>{{t "checkbox.required"}}
  <input type="checkbox" name="persistent" {{check persistentValue}}>{{t "checkbox.persistent"}}
  <div class="checkboxes">
  {{#each checkboxes}}
    <div class="form-inline">
      <input type="text" value="{{this}}" name="{{../fieldId}}" id="{{../fieldId}}-{{increase @index}}" class="checkbox">
      <button type="button" class="btn btn-default btn-sm remove-checkbox" aria-label="{{t "checkbox.remove"}}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
      <button type="file" class="btn btn-default btn-sm upload-checkbox" aria-label="{{t "checkbox.upload"}} checkbox"><span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span></button>
    </div>
  {{/each}}
  </div>
  <button type="button" class="btn btn-default btn-sm add-checkbox" aria-label="{{t "checkbox.add-checkbox"}}"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button>
</fieldset>