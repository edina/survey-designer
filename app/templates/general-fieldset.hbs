<fieldset class="fieldcontain fieldcontain-general">
  <legend>{{t "general.field-title"}}</legend>
  <label for="label">{{t "general.label-title"}}</label>
  <input type="text" name="label" value="{{t "general.label"}}">
  <div class="control-group">
    <label class="radio"><input type="checkbox" name="geometryType" checked="checked" value="{{t "general.point-value"}}">{{t "general.point-label"}}</label>
    <label class="radio"><input type="checkbox" name="geometryType" value="{{t "general.line-value"}}">{{t "general.line-label"}}</label>
    <label class="radio"><input type="checkbox" name="geometryType" value="{{t "general.polygon-value"}}">{{t "general.polygon-label"}}</label>
    <label class="radio"><input type="checkbox" name="geometryType" value="{{t "general.box-value"}}">{{t "general.box-label"}}</label>
  </div>
</fieldset>