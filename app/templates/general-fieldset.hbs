<fieldset class="fieldcontain fieldcontain-general"  data-type="{{type}}">
  <legend>{{t "general.field-title"}}</legend>
  <label for="label">{{t "general.label-title"}}</label>
  <input type="text" name="label" value="{{title}}">
  <div class="control-group">
    <label class="radio"><input type="checkbox" name="geometryType" {{checkGeometries "point" geoms}} value="{{t "general.point-value"}}">{{t "general.point-label"}}</label>
    <label class="radio"><input type="checkbox" name="geometryType" {{checkGeometries "line" geoms}} value="{{t "general.line-value"}}">{{t "general.line-label"}}</label>
    <label class="radio"><input type="checkbox" name="geometryType" {{checkGeometries "polygon" geoms}} value="{{t "general.polygon-value"}}">{{t "general.polygon-label"}}</label>
    <label class="radio"><input type="checkbox" name="geometryType" {{checkGeometries "box" geoms}} value="{{t "general.box-value"}}">{{t "general.box-label"}}</label>
  </div>
</fieldset>
