<fieldset class="fieldcontain fieldcontain-textarea" id="{{id}}" data-type="{{type}}">
  <legend>{{t "textarea.field-title"}}</legend>
  <label for="label">{{t "textarea.label-title"}}</label>
  <input type="text" name="label" value="{{label}}">
  <label for="required">{{t "textarea.required"}}</label>
  <input type="checkbox" name="required" {{check required "checked"}}>
  <label for="placeholder">{{t "textarea.default-text-title"}}</label>
  <input type="text" name="placeholder" placeholder="{{t "textarea.default-text"}}" value="{{properties.placeholder}}">
  <label for="persistent">{{t "textarea.persistent"}}</label>
  <input type="checkbox" name="persistent" {{check persistent "checked"}}>
</fieldset>
