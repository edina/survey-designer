<fieldset class="fieldcontain fieldcontain-textarea">
  <legend>{{t "textarea.field-title"}}</legend>
  <label for="label">{{t "textarea.label-title"}}</label>
  <input type="text" name="label" value="{{t "textarea.label"}}">
  <input type="checkbox" name="required" checked="checked">{{t "textarea.required"}}
  <label for="placeholder">{{t "textarea.default-text-title"}}</label>
  <input type="text" name="placeholder" placeholder="{{t "textarea.default-text"}}">
  <label for="max-chars">{{t "textarea.max-chars-title"}}</label>
  <input type="number" name="max-chars" value="{{t "textarea.max-chars"}}">
</fieldset>